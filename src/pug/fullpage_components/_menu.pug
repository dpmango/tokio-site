include ../shared/_mixins

.container.layout__vertical_offset.layout__offset
  -
    var menuItems = [
    ["Роллы", "roll"],
    ['Сашими', 'sashimi'],
    ['Супы', 'soup'],
    ['Горячее', 'hot'],
    ['Холодное', 'cold'],
    ['Напитки', 'drinks']
    ]
  .container_hor
    +icon("icon-y-letter").background_letter.menu_page__letter_y
    +icon("icon-o-letter").background_letter.menu_page__letter_o
    .categories
      each item in menuItems
        .category
          span.category__title= item[0]
          .category__image_wrapper
            .category__image(style=`background-image: url(${'img/menu/' + item[1] + '.jpeg'})`)
              .category__filter