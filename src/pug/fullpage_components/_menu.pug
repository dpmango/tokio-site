include ../shared/_mixins

.container.menupage
  .layout__offset.menupage__wrapper
    +icon("icon-y-letter").background_letter.menupage__letter_y.b-wide
    +icon("icon-o-letter").background_letter.menupage__letter_o.b-mob
    +icon("icon-o-letter").background_letter.menupage__letter_o2.b-mob

    .container.b-tab
      .container_hor
        h1 Наше меню
    .categories
      -
        var menuItems = [
        ["Роллы", "roll"],
        ['Сашими', 'sashimi'],
        ['Супы', 'soup'],
        ['Горячее', 'hot'],
        ['Холодное', 'cold'],
        ['Напитки', 'drinks']
        ]
      each item in menuItems
        +anchor(href='menu.html#').category
          span.category__title= item[0]
          .category__image_wrapper
            .category__image(style=`background-image: url(${'img/menu/' + item[1] + '.jpeg'})`)
              .category__filter