-
  const items = [
  ["Роллы", "roll"],
  ['Сашими', 'sashimi'],
  ['Супы', 'soup'],
  ['Горячее', 'hot'],
  ['Холодное', 'cold'],
  ['Напитки', 'drinks']
  ]


.container_hor.slide__inner.menu_page
  +icon("icon-y-letter").menu_page__y
  +icon("icon-o-letter").menu_page__o
  .categories
    each item in items
      // category
      .category
        span.category__title= item[0]
        .category__image_wrapper
          .category__image(style=`background-image: url(${'img/menu/' + item[1] + '.jpeg'})`)
            .category__filter
