include ../shared/_mixins

// HEADER :: START

mixin header(absoluteLinks)
  - absoluteLinks = absoluteLinks || false

  header.header#header
    .container.layout__offset.header__wrapper
        nav.header__nav
          -
            var navigation = [
            ['Меню', 'menu'],
            ['О нас', 'about'],
            ['Новости', 'news'],
            ['Контакты', 'contacts'],
            ]
          each navItem in navigation
            +anchor(
              href='index.html#' + navItem[1]).header__nav_item= navItem[0]
        +anchor.hamburger-btn.hidden
        .header__logo
          +anchor(href='index.html#home')
            .icon-logo.b-normal
            .icon-tokio-icon.b-tab.b-mob
        .header__reserve
          +anchor(js-modal-invoker="modal-reserve")
            .icon-reserve.b-normal
            .icon-reserve-white.b-tab
            .icon-reserve-mobile.b-mob

// HEADER :: END
